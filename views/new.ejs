<%- include('partials/header') %>

<div class="container text-center" style="width: 50%; margin: 5% auto;">
        <div>
            <h3>Add New Campground</h3>
            <hr>
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div>

                <button type="submit" class="btn btn-primary btn" style="width: 100%;">Submit</button>
            </form>

            <a href="/campgrounds">Go back</a>
        </div>
    
    
</div>


<%- include('partials/footer') %>
