<%- include('../partials/header') %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to campgrounds page</h1>
        <p>Let's see our popular campgrounds</p>
        <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
    </header>
    <hr>

    <div class="row" style="display: flex; flex-wrap: wrap;">

        <%camps.forEach(function(camp){%>
            <div class="col-md-4 col-sm-6">
                <figure class="figure">
                    <img src="<%=camp.image%>" class="img-fluid img-thumbnail">
                    <figcaption class="figure-caption">
                        <%=camp.name%> <br>
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-sm btn-primary">More info</a>
                    </figcaption>
                </figure>
                
            </div>
        <%}); %>
    </div>
    
</div>

<%- include('../partials/footer') %>
