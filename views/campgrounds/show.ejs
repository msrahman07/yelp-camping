<div class="col-6 container">
    <h1>Welcome to show page</h1>
    <h3><%= camp.name %></h3>
    <figure class="figure">
        <img src="<%=camp.image%>" class="img-fluid img-thumbnail">
    </figure>
    <p><%=camp.description%></p>
    <hr>
    <Label>Comments</Label>
    <%for(let comment in camp.comments){%>
        <p><strong><%=camp.comments[comment].author%></strong> - <%=camp.comments[comment].text%></p>
        <hr>
    <%}%>
    <a href="/campgrounds/<%=camp._id%>/comments/new">add a comment</a>
</div>
<%- include('../partials/footer') %>
